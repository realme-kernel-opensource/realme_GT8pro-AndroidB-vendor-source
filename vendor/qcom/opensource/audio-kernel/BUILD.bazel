package(
    default_visibility = [
        "//visibility:public",
    ],
)

load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")

ddk_headers(
    name = "audio_common_headers",
    hdrs = glob([
        "include/asoc/*.h",
        "include/bindings/*.h",
        "include/dsp/*.h",
        "include/ipc/*.h",
#ifdef CONFIG_OPLUS_FEATURE_MM_FEEDBACK
#Add for feedback
        "include/feedback/*.h",
#endif /* CONFIG_OPLUS_FEATURE_MM_FEEDBACK */
        "include/soc/*.h"
    ]),
    includes = ["include"]
)
ddk_headers(
    name = "audio_uapi_headers",
    hdrs = glob([
        "include/uapi/audio/**/*.h"
    ]),
    includes = ["include/uapi/audio"]
)
ddk_headers(
    name = "audio_src_headers",
    hdrs = glob([
        "asoc/**/*.h",
        "dsp/**/*.h",
        "ipc/**/*.h",
        "soc/**/*.h"
    ])
)
ddk_headers(
    name = "audio_configs",
    hdrs = glob([
        "config/*.h"
    ]),
    includes = ["config"]
)
# add for oplus audio daemon kernel
ddk_headers(
    name = "audio_daemon_headers",
    hdrs = glob([
        "oplus/oplus_audio_daemon/*.h"
    ]),
    includes = ["oplus/oplus_audio_daemon"]
)
ddk_headers(
    name = "oplus_typec_switch_headers",
    hdrs = glob([
        "oplus/qcom/oplus_typec_switch_i2c/*.h"
    ]),
    includes = ["oplus/qcom/oplus_typec_switch_i2c"]
)
ddk_headers(
    name = "audio_headers",
    hdrs = [":audio_common_headers",  ":audio_uapi_headers", ":audio_src_headers", ":audio_configs", ":audio_daemon_headers", ":oplus_typec_switch_headers"]
)

#ifdef OPLUS_ARCH_EXTENDS
#add for oplus audio extends driver
ddk_headers(
    name = "tfa98xx_headers",
    hdrs = glob([
        "oplus/codecs/tfa98xx-v6/*.h"
    ])
)
ddk_headers(
    name = "aw882xx_headers",
    hdrs = glob([
        "oplus/codecs/aw882xx/*.h"
    ])
)
# add for oplus audio netlink kernel communication
ddk_headers(
    name = "audio_netlink_headers",
    hdrs = glob([
        "oplus/oplus_audio_netlink/*.h"
    ]),
    includes = ["oplus/oplus_audio_netlink"]
)
#endif /* OPLUS_ARCH_EXTENDS */

