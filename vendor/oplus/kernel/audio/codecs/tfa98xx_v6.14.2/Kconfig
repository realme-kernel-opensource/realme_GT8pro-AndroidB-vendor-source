config SND_SOC_TFA98XX
	bool "Support Goodix smartpa driver"
	depends on I2C = y && REGMAP = y
	default y
	help
	  Select this option to enable support for Goodix smartpa driver tfa98xx

config SND_SOC_TFAHAPTIC
	bool "Support Goodix haptic driver"
	depends on I2C = y && REGMAP = y
	default y
	help
	  Select this option to enable support for Goodix haptic driver for TFA9873/4
