build:gbl --@rules_rust//rust/settings:toolchain_generated_sysroot=false
common:gbl --extra_toolchains=@gbl//toolchain:all
test:gbl  --test_output=errors

common:gbl --enable_workspace
common:gbl --incompatible_autoload_externally=+@rules_python,-ProguardSpecProvider,-java_binary,-java_import,-java_library,-java_plugin,-java_test,-java_runtime,-java_toolchain,-java_package_configuration,-@com_google_protobuf,-@protobuf,+@rules_shell,-@rules_android
common:gbl --noincompatible_disallow_empty_glob
common:gbl -c opt
